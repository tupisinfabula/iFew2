<div class="container">
  <h1>My Progresses</h1>
  <div class="row">
    <div class="col-md-4">
      <h2>Weight</h2>
      <br>
      <h4 class="start-weight glyphicon glyphicon-flag aria-hidden='true'"> Start weight: <%= current_user.weight %> Kg </h4>
      <br><br>
      <table class="table table-hover">
        <tr>
          <% @progresses.each do |progress| %>
          <td><span class="glyphicon glyphicon-chevron-right"> Weight: <%= progress.weight %> |   Date: <%= progress.date.strftime('%Y, %B %d') %></span></td>
        </tr>
        <tr>
          <td>
            <%= link_to 'Edit',  edit_progress_path(progress), data: { id: progress.id } , class: 'js-edit' %> |
            <%= link_to 'Delete', progress_path(progress), method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
        <% end  %>
      </table>
      <!--  Form to add weight progress-->
      <%= simple_form_for @progress, html: {class:'form-horizontal'} do |f| %>
        <div class="progress_id"> </div>
        <%= f.input :date %>
        <%= f.input :weight, input_html: { class: 'form-control'} %>
        <br>
        <%= f.submit 'Edit Progress', class: 'btn btn-warning' %>
        <%= f.submit 'New Progress', class: 'btn btn-primary' %> |
        <%= link_to 'Back', root_path, class: 'btn btn-default' %>
      <% end %>
    </div>
    <div class="col-md-8">
      <div class="row">
        <div class="col-md-12">
          <h1>Run</h1>
          <canvas id="myChart"></canvas>
          <!-- <canvas id="myChart2"></canvas> -->
        </div>
      </div>
    </div>
  </div>
</div>
