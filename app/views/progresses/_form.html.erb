<%= simple_form_for @progress, html: {class:'form-horizontal'} do |f| %>
  <%= f.input :date.strftime('%Y'),  id: 'date' %>
  <%= f.input :weight, id: 'weight', input_html: { class: 'form-control'} %>
  <br>
  <%= f.button :submit, class: 'btn btn-primary'%>
  | <%= link_to 'Back', root_path, class: 'btn btn-default' %>
<% end %>
