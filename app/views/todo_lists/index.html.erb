<h2> <%= current_user.name %>'s Todo List </h2>

  <div class="table-responsive">
    <table class="table table-responsive table-hover ">
      <br> <h3>Your ToDo list:</h3>
      <thead>
        <tr>
          <th>#</th>
          <th>TODO List</th>
          <th>Description</th>
        </tr>
      </thead>
      <% @count_todo = 0 %>
      <% @todo_lists.each do |todo| %>
        <tbody>
          <tr>
            <% @count_todo += 1 %>
            <td><%= @count_todo %></td>
            <td><%= link_to todo.title, todo %> </td>
            <td><%= todo.description %> <br></td>
            <td><%= link_to 'Edit', edit_todo_list_path(todo) %></td>
            <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        </tbody>
      <% end %>
    </table>
  </div>
<br>

<%= link_to 'New Todo list', new_todo_list_path, class: ('btn btn-default ') %>
